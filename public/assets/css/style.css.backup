/* Sticky Footer Formatting */
html {
  position: relative;
  min-height: 100%;
}

body {
  margin-bottom: 40px;
}

.footer {
  height: 40px;
  width: 100%;
  line-height: 40px;
  position: absolute;
  bottom: 0;
  text-align: center;
  font-size: small;
  background-color: #f5f5f5;
}

/* Nav Bar Formatting */
.navbar {
  background-color: #f5f5f5;
  align-content: center;
}

/* Style for the logo int he nav bar header */
#logo {
  height: 75px;
  width: 200px;
}

/* Style for login, register links below nav bar */
#login-btns {
  float: right;
}
 
#failed {
  color: red;
}

/* Style for contact page */

.row {
  background-color: #E0D8E1;
}


#contact_form {
  background-image: url("../images/contact_image.jpg") !important;
}

